<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oxiorapp.healthapp">
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true"
        />


    <application
        android:screenOrientation="locked"
        android:allowBackup="true"
        android:icon="@mipmap/icona"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Animations.SplashScreen"
            android:screenOrientation="locked">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"  />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Utilities.HealthApp"
            android:label="@string/app_name"
            android:screenOrientation="locked">
        </activity>
        <activity android:name=".Utilities.Home"
            android:screenOrientation="locked"></activity>
        <activity android:name=".Utilities.SignupActivity"
            android:screenOrientation="locked"
            android:theme="@style/AppTheme" />
        <activity android:name=".Utilities.UserInfo"
            android:screenOrientation="locked"/>
        <activity android:name=".Utilities.Search"
            android:screenOrientation="locked"/>
    </application>

</manifest>
