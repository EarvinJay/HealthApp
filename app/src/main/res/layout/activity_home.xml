<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="oxiorapp.healthapp.home"
    android:background="@drawable/background"
    android:focusable="false"
    android:visibility="visible">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:hint="Date"
        android:id="@+id/txtdate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtweight"
        android:hint="Weight"
        android:layout_below="@+id/txtdate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtheight"
        android:hint="Height"
        android:layout_below="@+id/txtweight"
        android:layout_alignRight="@+id/txtbloodtype"
        android:layout_alignEnd="@+id/txtbloodtype"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtbloodtype"
        android:hint="Blood Type"
        android:layout_below="@+id/txtheight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtallergies"
        android:layout_alignEnd="@+id/txtallergies" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtallergies"
        android:hint="Allergies"
        android:layout_below="@+id/txtbloodtype"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtfoodpref"
        android:hint="Food Preferences"
        android:layout_alignLeft="@+id/txtallergies"
        android:layout_alignStart="@+id/txtallergies"
        android:layout_below="@+id/txtallergies"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtweightobj"
        android:hint="Wieght Objective"
        android:layout_below="@+id/txtfoodpref"
        android:layout_alignLeft="@+id/txtfoodpref"
        android:layout_alignStart="@+id/txtfoodpref"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/btnstart"
        android:onClick="toUserInfo"
        android:layout_below="@+id/txtweightobj"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp" />

</RelativeLayout>
